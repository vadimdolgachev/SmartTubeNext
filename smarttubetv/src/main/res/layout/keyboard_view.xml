<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llFirstRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/btnPaymentKeyClear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/keyboard_bg"
            android:focusable="true">

            <View
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/clear_key" />
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llSecondRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llThirdRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFourRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/btnChangeNum"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:background="@drawable/keyboard_bg"
            android:focusable="true">

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\?123" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/changeLang"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:background="@drawable/keyboard_bg"
            android:focusable="true">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/settings_language" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnSpace"
            android:layout_width="295dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/keyboard_spaces_bg"
            android:focusable="true">

        </FrameLayout>


        <FrameLayout
            android:id="@+id/btnUpperCase"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:background="@drawable/keyboard_bg"
            android:focusable="true">

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/ic_shift" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnClear"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:background="@drawable/keyboard_bg"
            android:focusable="true">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/ic_trash" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>